CREATE TABLE MUNICIPIOS(
 ID_MUNICIPIO INT(2) NOT NULL PRIMARY KEY,
 NOMBRE VARCHAR(50)
);

CREATE TABLE CENTROS_METEOROLOGICOS(
 ID_CENTRO_MET INT(2) NOT NULL PRIMARY KEY,
 COD_MUNICIPIO INT(2) NOT NULL,
 NOMBRE VARCHAR(50), 
 DIRECCION VARCHAR(50),
 LATITUD FLOAT (20,20),
 LONGITUD FLOAT (20,20),
 FOREIGN KEY (COD_MUNICIPIO) REFERENCES MUNICIPIOS(ID_MUNICIPIO) 	
);
CREATE TABLE FUENTES(
 ID_INDEX INT(2) NOT NULL PRIMARY KEY,
 FORMATO VARCHAR(5), 
 NOMBRE VARCHAR(50),
 URL VARCHAR(150),
 HASH VARCHAR(64)
);

CREATE TABLE ESPACIOS_NATURALES(
 ID_ESPACIO INT(2) NOT NULL PRIMARY KEY,
 NOMBRE VARCHAR(50),
 DESCRIPCION VARCHAR(2000),
 TIPO VARCHAR(50),
 DIRECCION VARCHAR(50),
 CATEGORIA VARCHAR(50),
 LATITUD FLOAT (20,20),
 LONGITUD FLOAT (20,20)
);

CREATE TABLE CLIENTES(
 ID_CLIENTE INT(2) NOT NULL PRIMARY KEY,
 USUARIO VARCHAR(30),
 PASSWD VARCHAR(30)
);

CREATE TABLE MUNICIPIO_ESPACIO_NAT(
 COD_MUNI INT(2) NOT NULL,
 COD_ESPACIO INT(2) NOT NULL,
 PRIMARY KEY (COD_MUNI, COD_ESPACIO)
);

CREATE TABLE MEDICION_CENTRO_MET(
 ID_CENTRO INT(2) NOT NULL PRIMARY KEY,
 FECHA DATE,
 HORA TIME(2),
 COMGM3 FLOAT (3,2),
 CO8HMGM3 FLOAT (3,2),
 NOGM3 FLOAT (3,2),
 NO2 FLOAT (3,2),
 NO2ICA VARCHAR(50),
 NOXGM3 FLOAT (3,2),
 PM10 FLOAT (3,2),
 PM10ICA VARCHAR(50),
 PM25 FLOAT (3,2),
 PM25ICA VARCHAR(50),
 SO2 FLOAT (3,2),
 SO2ICA VARCHAR(50),
 ICA_ESTACION VARCHAR(50)
);

CREATE TABLE PROVINCIAS(
 ID_PROVINCIA INT(2) NOT NULL PRIMARY KEY,
 NOMBRE VARCHAR(50)
);

CREATE TABLE MUNICIPIOS_PROVINCIAS(
 COD_PROVINCIA INT(2) NOT NULL,
 ID_MUNI INT(2),
 PRIMARY KEY(COD_PROVINCIA, ID_MUNI)
);

